<resources>
    <style name="RateTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="ratingRootStyle">@style/RateTheme.Root</item>
        <item name="ratingHeaderStyle">@style/RateTheme.Header</item>
        <item name="ratingIconStyle">@style/RateTheme.Icon</item>
        <item name="ratingTitleStyle">@style/RateTheme.Title</item>
        <item name="ratingMessageStyle">@style/RateTheme.Message</item>
        <item name="ratingRatingBarStyle">@style/RateTheme.RatingBar</item>
        <item name="ratingDividerStyle">@style/RateTheme.Divider</item>
        <item name="ratingActionAreaStyle">@style/RateTheme.ActionArea</item>
        <item name="ratingActionButtonStyle">@style/RateTheme.ActionButton</item>

    </style>

    <style name="RateTheme.Root">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="RateTheme.Header">
        <item name="android:background">#4d95f1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="RateTheme.Icon">
        <item name="android:src">@android:drawable/sym_def_app_icon</item>
        <item name="android:layout_marginLeft">@dimen/rate_content_horizontal_padding</item>
        <item name="android:layout_marginTop">@dimen/rate_content_horizontal_padding</item>
        <item name="android:layout_marginBottom">@dimen/rate_content_horizontal_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RateTheme.Title">
        <item name="android:layout_marginLeft">@dimen/rate_content_horizontal_padding</item>
        <item name="android:layout_marginRight">@dimen/rate_content_horizontal_padding</item>
        <item name="android:layout_marginBottom">@dimen/rate_content_vertical_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RateTheme.Message">
        <item name="android:layout_marginLeft">@dimen/rate_content_horizontal_padding</item>
        <item name="android:layout_marginRight">@dimen/rate_content_horizontal_padding</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ababab</item>
    </style>

    <style name="RateTheme.RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
        <item name="android:progressDrawable">@drawable/rating_bar</item>
    </style>

    <style name="RateTheme.Divider">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#999</item>
    </style>

    <style name="RateTheme.ActionArea">
        <item name="android:padding">8dp</item>
    </style>

    <style name="RateTheme.ActionButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dip</item>
        <item name="android:textColor">#5694ff</item>
    </style>

</resources>
