<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.rambler.libs.rate.RateActivity">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        style="?ratingRootStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            style="?ratingHeaderContainerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/header"
                style="?ratingHeaderStyle" />

            <ImageView
                android:id="@+id/icon"
                style="?ratingIconStyle" />
        </FrameLayout>

        <TextView
            android:id="@+id/title"
            style="?ratingTitleStyle"
            tools:text="title" />

        <TextView
            android:id="@+id/message"
            style="?ratingMessageStyle"
            tools:text="what do you think about me?" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?ratingRatingBarStyle" />

        <View style="?ratingDividerStyle" />

        <LinearLayout
            android:id="@+id/action_area"
            style="?ratingActionAreaStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <Button
                android:id="@+id/btn_cancel"
                style="?ratingActionButtonStyle"
                android:layout_marginRight="8dp"
                tools:text="Cancel" />

            <Button
                android:id="@+id/btn_later"
                style="?ratingActionButtonStyle"
                tools:text="Later" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>