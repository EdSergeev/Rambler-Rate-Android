<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RateTheme.RootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="ru.rambler.rate.RateActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/header"
            style="@style/RateTheme.Header" />

        <ImageView
            android:id="@+id/icon"
            style="@style/RateTheme.Icon" />
    </FrameLayout>

    <TextView
        android:id="@+id/title"
        style="@style/RateTheme.Title"
        tools:text="title" />

    <TextView
        android:id="@+id/message"
        style="@style/RateTheme.Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="what do you think about me?" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/RateTheme.Stars"/>

    <View style="@style/RateTheme.Divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <Button
            android:id="@+id/btn_later"
            style="@style/RateTheme.Button"
            android:text="Later" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/RateTheme.Button"
            android:text="Cancel" />
    </LinearLayout>
</LinearLayout>
